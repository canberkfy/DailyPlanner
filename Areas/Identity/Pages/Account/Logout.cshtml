@page
@model LogoutModel
@{
    ViewData["Title"] = "Oturumu Kapat";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2>@ViewData["Title"]</h2>
            <hr />

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <p>Uygulamadan çıkmak üzeresin. Emin misin?</p>

                <form class="mt-3" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-danger">🚪 Oturumu Kapat</button>
                </form>
            }
            else
            {
                <div class="alert alert-success mt-4">
                    Oturumunuz başarıyla kapatıldı.
                </div>
                <a asp-page="./Login" class="btn btn-primary mt-3">🔐 Giriş Yap</a>
            }
        </div>
    </div>
</div>
